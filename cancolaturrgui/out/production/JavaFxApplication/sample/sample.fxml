<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <TextField fx:id="input" GridPane.rowIndex="0" GridPane.columnIndex="0" prefHeight="40"></TextField>
    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10">
        <Button fx:id="a7" text="7" prefWidth="40" onAction="#rite"></Button>
        <Button fx:id="a8" text="8" prefWidth="40" onAction="#rite"></Button>
        <Button fx:id="a9" text="9" prefWidth="40" onAction="#rite"></Button>
        <Button fx:id="ch" text="/" prefWidth="40" onAction="#oper"></Button>
    </HBox>
    <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" spacing="10">
        <Button fx:id="a4" text="4" prefWidth="40" onAction="#rite"></Button>
        <Button fx:id="a5" text="5" prefWidth="40" onAction="#rite"></Button>
        <Button fx:id="a6" text="6" prefWidth="40" onAction="#rite"></Button>
        <Button fx:id="c" text="*" prefWidth="40" onAction="#oper" ></Button>
    </HBox>
    <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" spacing="10">
        <Button  fx:id="a1" text="1" prefWidth="40" onAction="#rite"></Button>
        <Button  fx:id="a2" text="2" prefWidth="40" onAction="#rite"></Button>
        <Button  fx:id="a3" text="3" prefWidth="40" onAction="#rite"></Button>
        <Button  fx:id="min" text="-" prefWidth="40" onAction="#oper" ></Button>
</HBox>
    <HBox GridPane.rowIndex="4" GridPane.columnIndex="0" spacing="10">
        <Button  fx:id="a0" text="0" prefWidth="40" onAction="#rite"></Button>
        <Button  fx:id="sum" text="=" prefWidth="40" onAction="#opersum"></Button>
        <Button  fx:id="reset" text="reset" prefWidth="40" onAction="#reset"></Button>
        <Button  fx:id="plus" text="+" prefWidth="40" onAction="#oper"></Button>


</HBox>
</GridPane>